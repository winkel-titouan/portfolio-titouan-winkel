---
import linkedinLogo from "../assets/logos/linkedin.svg";
import behanceLogo from "../assets/logos/behance.svg";
---

<footer class="bg-black text-white py-8 px-6 md:px-12">
    <div class="max-w-7xl mx-auto">
        <div
            class="flex flex-col md:flex-row justify-between items-center md:items-center mb-6 gap-6 md:gap-0"
        >
            <h2
                style="font-family: 'Russo One', sans-serif; font-weight: 400; font-style: normal; line-height: normal; color: #FFF;"
                class="text-2xl md:text-[32px]"
            >
                Titouan Winkel
            </h2>

            <div
                class="flex flex-col md:flex-row gap-8 md:gap-16 items-center md:items-start w-full md:w-auto"
            >
                <!-- Navigation -->
                <div class="text-center md:text-left">
                    <h3
                        class="mb-3"
                        style="font-family: 'Space Grotesk', sans-serif; font-size: 16px; font-weight: 700; font-style: normal; line-height: normal; color: #FFF;"
                    >
                        Navigation
                    </h3>
                    <ul
                        class="space-y-2"
                        style="font-family: 'Space Grotesk', sans-serif; font-size: 14px; font-weight: 400; font-style: normal; line-height: normal; color: #FFF;"
                    >
                        <li>
                            <a
                                href="/projets"
                                class="text-white hover:text-purple-400 transition-colors"
                                >Projets</a
                            >
                        </li>
                        <li>
                            <a
                                href="/a_propos"
                                class="text-white hover:text-purple-400 transition-colors"
                                >A propos</a
                            >
                        </li>
                        <li>
                            <a
                                href="/contact"
                                class="text-white hover:text-purple-400 transition-colors"
                                >Contact</a
                            >
                        </li>
                    </ul>
                </div>

                <!-- Réseaux sociaux -->
                <div class="text-center md:text-left">
                    <h3
                        class="mb-3"
                        style="font-family: 'Space Grotesk', sans-serif; font-size: 16px; font-weight: 700; font-style: normal; line-height: normal; color: #FFF;"
                    >
                        Réseaux sociaux
                    </h3>
                    <div class="flex gap-4 justify-center md:justify-start">
                        <a
                            href="https://linkedin.com"
                            target="_blank"
                            rel="noopener noreferrer"
                            class="hover:opacity-80 transition-opacity"
                        >
                            <img
                                src={linkedinLogo.src || "/placeholder.svg"}
                                alt="LinkedIn"
                                class="w-10 h-10"
                            />
                        </a>
                        <a
                            href="https://behance.net"
                            target="_blank"
                            rel="noopener noreferrer"
                            class="hover:opacity-80 transition-opacity"
                        >
                            <img
                                src={behanceLogo.src || "/placeholder.svg"}
                                alt="Behance"
                                class="w-10 h-10"
                            />
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div
            class="text-center pt-6 border-t border-gray-800"
            style="font-family: 'Space Grotesk', sans-serif; font-size: 14px; font-weight: 400; font-style: normal; line-height: normal; color: #FFF;"
        >
            © 2025 Titouan Winkel - Tous droits réservés
        </div>
    </div>
</footer>
