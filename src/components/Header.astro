---
import SkewButton from "./SkewButton.astro";
---

<header class="container mx-auto px-6 py-6">
    <nav class="flex items-start justify-between">
        <div class="flex items-baseline gap-3">
            <!-- Applied exact Figma styles for Titouan: 50px, Russo One, black -->
            <a href="/" class="hover:opacity-80 transition-opacity">
                <h1
                    class="text-black leading-normal"
                    style="font-family: 'Russo One', sans-serif; font-size: 50px; font-weight: 400; font-style: normal;"
                >
                    Titouan Winkel
                </h1>
            </a>
            <!-- Applied exact Figma styles: Space Grotesk, 20px, weight 400 -->
            <span
                class="text-purple-600"
                style="font-family: 'Space Grotesk', sans-serif; font-size: 20px; font-weight: 400; font-style: normal; line-height: normal;"
                >Designer web</span
            >
        </div>

        <div class="flex items-center gap-17 mt-2">
            <SkewButton href="/projets" text="Projets" />
            <SkewButton href="/about" text="A propos" />
            <SkewButton href="/contact" text="Contact" />
        </div>
    </nav>
</header>
